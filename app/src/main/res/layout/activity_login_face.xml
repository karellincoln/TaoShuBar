<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:layout_margin="15dip"
        android:background="@drawable/logindivision1">
        <TextView
            android:id="@+id/user_account_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="账户："
            android:textSize="14sp"
            android:textColor="#2e2e2e"/>
        <EditText
            android:id="@+id/user_account_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_account_tips"
            android:layout_below="@id/user_account_tips"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textSize="14sp"
            android:textColorHint="#8e8a8a"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/user_password_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_account_input"
            android:layout_below="@id/user_account_input"
            android:text="密码："
            android:textSize="14sp"
            android:textColor="#2e2e2e"/>
        <EditText
            android:id="@+id/user_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_password_tips"
            android:layout_below="@id/user_password_tips"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColorHint="#8e8a8a"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_password_input"
            android:layout_alignRight="@id/user_password_input"
            android:text="登录"
            android:background="@drawable/loginbuttonbackground"
            android:textColor="#880000ff"
            />
        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_password_input"
            android:layout_alignParentLeft="true"
            android:text="注册"
            android:background="@drawable/loginbuttonbackground"
            android:textColor="#880000ff"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/logindivision1">
        <android.support.v4.view.ViewPager
            android:id="@+id/register_field_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>
