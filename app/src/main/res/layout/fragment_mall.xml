<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.ciao.taoshubar.MallFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        style="@style/TextAppearance.AppCompat.Menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/three_main_fragment"
        android:gravity="center"
        android:text="@string/mall_fragment_guidance" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:weightSum="4">
        <ListView
            android:id="@+id/needed_books"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:divider="@android:drawable/divider_horizontal_bright">
        </ListView>
        <Button
            android:id="@+id/mall_for_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/mall_for_books"/>
    </LinearLayout>

</LinearLayout>
